package common;


import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Collection;
import java.util.List;

import org.apache.poi.hssf.usermodel.HSSFCellStyle;
import org.apache.poi.hssf.usermodel.HSSFSheet;
import org.apache.poi.hssf.usermodel.HSSFWorkbook;
import org.apache.poi.ss.usermodel.Cell;
import org.apache.poi.ss.usermodel.Row;

/*
 * Here we will learn how to create Excel file and header for the same.
 */
public class CreateExcelFile {

	public static int rownum = 0;
	 public static HSSFSheet firstSheet;
	public static Collection<File> files;
	public static HSSFWorkbook workbook;
	public static File exactFile;
	
        public static void createSheet (String sheetName){
                rownum = 0;
                workbook = new HSSFWorkbook();
		firstSheet = workbook.createSheet(sheetName);
		Row headerRow = firstSheet.createRow(rownum);
		headerRow.setHeightInPoints(40);
        }
        public static void createExcelFile(String filePath) throws IOException{
                FileOutputStream fos = null;
		try {
			fos=new FileOutputStream(new File(filePath));
			HSSFCellStyle hsfstyle=workbook.createCellStyle();
			//hsfstyle.setBorderBottom((short) 1);
			hsfstyle.setFillBackgroundColor((short)245);
			workbook.write(fos);
                        
                       
		} catch (Exception e) {
			e.printStackTrace();
		}finally{
                    fos.close();
                    workbook.close();
                }
        }
        
        public static void createExcel(List<List> l1) throws Exception {
          
		try {

			for (int j = 0; j < l1.size(); j++) {
				Row row = firstSheet.createRow(rownum);
				List<String> l2= l1.get(j);

				for(int k=0; k<l2.size(); k++)
				{
					Cell cell = row.createCell(k);
					cell.setCellValue(l2.get(k));
				}
				rownum++;
			}

		} catch (Exception e) {
			e.printStackTrace();
		} finally {
		}

	}
}